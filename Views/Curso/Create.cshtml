@model Curso

@{
    ViewData["Message"] = "Creación de Curso";
    Layout = "Simple";
}

<h1>@ViewData["Message"]</h1>

<div asp-validation-summary="All"></div>
<form method="post">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
    </div>
    <div>
        <label asp-for="Dirección"></label>
        <input asp-for="Dirección" />
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList("Jornada",Html.GetEnumSelectList<TiposJornada>(),new { @class = "form-control" })
    </div>
    <input type="submit">
</form>